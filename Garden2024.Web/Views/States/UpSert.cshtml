@model StateEditVm
@{
    ViewData["Title"] = "New/Edit State";
}
<form method="post" asp-action="UpSert" class="w-75">
    @Html.AntiForgeryToken()
    <input type="hidden" asp-for="StateId" />
    
    <div class="border p-3 bg-white">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group row">
            <h2 class="text-info pl-3">@(Model.StateId==0?"Add State":"Edit State")</h2>

        </div>
        <div class="form-group row py-2">
            <label asp-for="StateName"></label>
            <input asp-for="StateName" class="form-control" />
            <span asp-validation-for="StateName" class="text-danger"></span>

        </div>
        <div class="form-group row py-2">
            <label asp-for="CountryId"></label>
            <select asp-for="CountryId" asp-items="Model.Countries" class="form-control">
                <option selected disabled>Select Country</option>
            </select>
            <span asp-validation-for="CountryId" class="text-danger"></span>

        </div>

        @if (Model.StateId == 0)
        {
            <button type="submit" class="btn btn-primary">
                <i class="bi bi-floppy2-fill"></i>
                Create
            </button>
        }
        else
        {
            <button type="submit" class="btn btn-warning">
                <i class="bi bi-pencil"></i>
                Edit
            </button>

        }
        <a asp-action="Index" class="btn btn-success btn-block">
            <i class="bi bi-backspace"></i>
            Back to List
        </a>


    </div>
</form>
@section Scripts
{
    @{
    <partial name="_ValidationScriptsPartial" />
    }
    <!-- Place the following <script> and <textarea> tags your HTML's <body> -->
}