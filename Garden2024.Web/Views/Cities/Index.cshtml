@model IPagedList<CityListVm>
@using X.PagedList
@using X.Web.PagedList
@{
    ViewData["Title"] = "City List";
}
<div class="container">
    @Html.AntiForgeryToken()
    <div class="row mb-3">
        <div class="col-6">
            <h3>City List</h3>

        </div>
        <div class="col-6 text-end">
            <a asp-controller="Cities" asp-action="UpSert" class="btn btn-primary">
                <i class="bi bi-plus-circle"></i>
                Nuevo
            </a>
        </div>
    </div>
    <table class="table table-bordered table-hover">
        <thead>
            <tr>
                <th style="width:25%">City</th>
                <th style="width:25%">State</th>
                <th style="width:30%">Country</th>
                <th style="width:20%">Actions</th>
            </tr>
        </thead>
        <tbody>
            @if (Model.Any())
            {
                foreach (var item in Model)
                {
                    <tr id="@item.CityId">
                        <td>
                            @item.CityName

                        </td>
                        <td>
                            @item.StateName
                        </td>
                        <td>
                            @item.CountryName
                        </td>
                        <td>
                            <a class="btn btn-warning" asp-controller="Cities" asp-action="UpSert" asp-route-id="@item.CityId">
                                <i class="bi bi-pencil-square"></i>&nbsp;
                                Edit
                            </a>
                            <a onclick="Delete('/Cities/Delete/@item.CityId',@item.CityId,'@item.CityName')" class="btn btn-danger">
                                <i class="bi bi-trash-fill"></i>
                                Delete
                            </a>
                        </td>
                    </tr>
                }
            }
            else
            {
                <tr>
                    <td colspan="4" class="text-center">
                        F?uck!!! No Cities added yet!

                    </td>
                </tr>

            }
        </tbody>
    </table>
    <partial name="_Pager" model="@Model" />

</div>
@section Scripts {
    <script src="~/lib/jquery/dist/jquery.js"></script>
    <script src="//cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/js/toastr.min.js"></script>
    <script src="~/js/common.js"></script>
}