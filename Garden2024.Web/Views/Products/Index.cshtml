@model ProductFilterVm
@using X.PagedList
@using X.Web.PagedList
@{
    ViewData["Title"] = "Products List";
}
<div class="container">
    @Html.AntiForgeryToken()
    <div class="row mb-3">
        <div class="col-6">
            <h3>Products List</h3>

        </div>
        <div class="col-6 text-end">
            <a asp-controller="Products" asp-action="UpSert" class="btn btn-primary">
                <i class="bi bi-plus-circle"></i>
                Nuevo
            </a>
        </div>
    </div>
    <form method="get" class="form-inline" asp-action="Index">
        <div class="d-flex flex-row align-items-center">
            <div class="col-auto mx-1">
                <label for="pageSize">Show:</label>
            </div>
            <div class="col-auto mx-2">
                <partial name="_SelectPaginas" model="@ViewBag.currentPageSize" />
            </div>
            <div class="col-auto mx-2">
                Category:
            </div>

            <div class="col-auto mx-2" style="width: 300px;">
                <select class="form-select" id="filterId" name="filterId" >
                    <option selected disabled value="0">Select Category</option>
                    @{
                        foreach (var item in Model.Categories!)
                        {
                            <option selected="@(ViewBag.currentFilterId==int.Parse(item.Value)?"selected":null)" value="@item.Value">@item.Text</option>
                        }
                    }
                </select>
            </div>
            <div class="col-auto d-flex">
                <button type="submit" class="btn btn-primary mx-2">
                    <i class="bi bi-search"></i> Search
                </button>
                <button type="submit" class="btn btn-secondary" id="viewAll" name="viewAll" value="true">
                    <i class="bi bi-list"></i> View All
                </button>
            </div>
        </div>
    </form>

    <table class="table table-bordered table-hover mt-3">
        <thead>
            <tr>
                <th style="width:20%">Product</th>
                <th style="width:20%">Category</th>
                <th style="width:14%">Q.Unit</th>
                <th style="width:8%">Price</th>
                <th style="width:8%">Stock</th>
                <th style="width:10%">Suspended</th>

                <th style="width:20%">Actions</th>
            </tr>
        </thead>
        <tbody>
            @if (Model.Products!.Any())
            {
                foreach (var item in Model.Products!)
                {
                    <tr id="@item.ProductId">
                        <td>
                            @item.ProductName

                        </td>
                        <td>
                            @item.Category
                        </td>
                        <td >
                            @item.QuantityPerUnit
                        </td>
                        <td style="text-align:right">
                            @item.UnitPrice.ToString("C2")
                        </td>
                        <td style ="text-align:right">
                            @item.Stock
                        </td>
                        <td>
                            <input type="checkbox" asp-for="@item.Suspended" disabled />
                           
                        </td>

                        <td>
                            <a class="btn btn-warning" asp-controller="Products" asp-action="UpSert" asp-route-id="@item.ProductId">
                                <i class="bi bi-pencil-square"></i>&nbsp;
                                Edit
                            </a>
                            <a onclick="Delete('/Products/Delete/@item.ProductId',@item.ProductId,'@item.ProductName')" class="btn btn-danger">
                                <i class="bi bi-trash-fill"></i>
                                Delete
                            </a>
                        </td>
                    </tr>
                }
            }
            else
            {
                <tr>
                    <td colspan="7" class="text-center">
                        F?uck!!! No products have been added yet!

                    </td>
                </tr>

            }
        </tbody>
    </table>
    <partial name="_Pager" model="@Model.Products" />


</div>
@section Scripts {
    <script src="~/lib/jquery/dist/jquery.js"></script>
    <script src="//cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/js/toastr.min.js"></script>
    <script src="~/js/common.js"></script>
}